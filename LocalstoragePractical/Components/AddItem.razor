@inherits AddItemBase
@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header" style="background: mediumslateblue;color:white">
                    <h5 class="modal-title" id="titleLabel">Create a new requirement</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    @if (ItemVM == null )
                    {
                        <p><em>Loading...</em></p>
                    }
                    else
                    {
                        <EditForm Model="@ItemVM" OnValidSubmit="@HandleValidSubmit">
                            <DataAnnotationsValidator />
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div>
                                            Name
                                            <input asp-for="Count" class="form-control form-control-sm" @bind-value="@ItemVM.Name" />
                                            <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => ItemVM.Name)" />
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div>
                                            Price
                                            <input disabled id="Container" class="form-control form-control-sm" @bind-value="@ItemVM.Price" />
                                            <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => ItemVM.Price)" />
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div>
                                            Quantity
                                            <input id="Container" class="form-control form-control-sm" @bind-value="@ItemVM.Quantity" />
                                            <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => ItemVM.Quantity)" />
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div style="margin-top:10px;">
                                            <input type="submit" value="Create" class="btn btn-primary btn-sm" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </EditForm>
                    }

                </div>
            </div>
        </div>
    </div>
}
